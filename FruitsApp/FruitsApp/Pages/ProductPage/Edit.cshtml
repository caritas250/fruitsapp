@page
@model FruitsApp.Pages_ProductPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Product_name" class="control-label"></label>
                <input asp-for="Product.Product_name" class="form-control" />
                <span asp-validation-for="Product.Product_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_description" class="control-label"></label>
                <input asp-for="Product.Product_description" class="form-control" />
                <span asp-validation-for="Product.Product_description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_price" class="control-label"></label>
                <input asp-for="Product.Product_price" class="form-control" />
                <span asp-validation-for="Product.Product_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_image" class="control-label"></label>
                <input asp-for="Product.Product_image" class="form-control" />
                <span asp-validation-for="Product.Product_image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control" />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
